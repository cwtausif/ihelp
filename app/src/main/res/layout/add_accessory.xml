<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.glowingsoft.ihelp.AddCarDriver">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:text="Accessory Repairs Registration"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/type"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:text="Shop Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/accessoryType_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <EditText
        android:id="@+id/driverNameEt"
        android:hint="Name"
        android:textSize="25dp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="City"
        android:textSize="25dp"
        android:inputType="text"
        android:id="@+id/driverCityEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Location"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Location"
        android:layout_margin="20dp"
        android:background="@drawable/rectangle"
        android:id="@+id/textView_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/textView_post"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Register"
        android:padding="5dp"
        android:background="@drawable/btn_go"
        android:textColor="#ffffff"
        android:textSize="@dimen/size22" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/mPb"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
